extends ../layout

block content
    h1.
         #{title}
         
    p 
        a(href='/horses/new') Dodaj nowego konia
    ul
        - each horse, i in horses
            li
                = horse.name 
                = horse.sex 
                = horse.breeder
                = horse._id
                form(action='/horses/#{horse._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Usuń
                p 
                    a(href='/horses/#{horse._id}/edit') Edytuj
                p
                    a(href='/horses/#{horse._id}') Pokaż
