block content
    script(src="/js/com_serv.js")

    h3 Tu będzie panel logowania a potem panel oceniania koni, dla sędziów podczas pokazu
    
    form(name="addhorse",method="post",action="/horses")
        p Typ:
            input(type='number', name="type", id='type')
        p Głowa i szyja:
            input(type='number', name="head", id='head')
        p Kłoda:
            input(type='number', name="body", id='body')
