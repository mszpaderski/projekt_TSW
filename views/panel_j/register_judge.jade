extends ../layout

block content
  .container
    h1 Rejestracja nowego sędziego:
    br
    form(role='form', action="/judge_p/signup",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Login')
      .form-group
        input.form-control(type='password', name="password", placeholder='Hasło')
      .form-group
        input.form-control(type='text', name="firstName", placeholder='Imię')
      .form-group
        input.form-control(type='text', name="lastName", placeholder='Nazwisko')
      button.btn.btn-default(type='submit') Rejestruj